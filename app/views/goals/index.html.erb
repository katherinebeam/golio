<p id="notice"><%= notice %></p>

<h1>My Dream Destinations</h1>
  <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d114964.52300824488!2d-80.22945845000001!3d25.7824075!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sus!4v1447698251666" width="1000" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= image_tag goal.picture.url(:medium) %></td>
        <td><%= goal.user.email if goal.user %></td>
        <td><%= goal.location %></td>
        <td><%= goal.description %></td>
        <td><%= link_to 'Show', goal_path(goal) %></td>
        <% if goal.user == current_user %>
          <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
          <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Goal', new_goal_path %>
<% end %>
